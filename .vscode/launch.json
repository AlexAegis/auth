{
	"configurations": [
		{
			"type": "chrome",
			"linux": {
				"runtimeExecutable": "/usr/bin/chromium"
			},
			"request": "launch",
			"name": "Launch Core Demo",
			"url": "http://localhost:4801",
			"webRoot": "${workspaceFolder}",
			"cwd": "${workspaceFolder}",
			"preLaunchTask": "start:core"
		},
		{
			"type": "chrome",
			"linux": {
				"runtimeExecutable": "/usr/bin/chromium"
			},
			"request": "launch",
			"name": "Launch Jwt Demo",
			"url": "http://localhost:4802",
			"webRoot": "${workspaceFolder}",
			"cwd": "${workspaceFolder}",
			"preLaunchTask": "start:jwt"
		},
		{
			"type": "chrome",
			"linux": {
				"runtimeExecutable": "/usr/bin/chromium"
			},
			"request": "launch",
			"name": "Launch Ngrx Demo",
			"url": "http://localhost:4802",
			"webRoot": "${workspaceFolder}",
			"cwd": "${workspaceFolder}",
			"preLaunchTask": "start:ngrx"
		},
		{
			"name": "Current TS File",
			"type": "node",
			"request": "launch",
			"env": {
				"TS_NODE_PROJECT": "./tsconfig.json",
				"TS_NODE_TRANSPILE_ONLY": "true",
				"TS_NODE_FILES": "true"
			},
			"args": ["${relativeFile}"],
			"runtimeArgs": [
				"-r",
				"ts-node/register",
				"-r",
				"tsconfig-paths/register",
				"--max-old-space-size=8192"
			],
			"cwd": "${workspaceRoot}",
			"protocol": "inspector",
			"internalConsoleOptions": "openOnSessionStart"
		}
	]
}
