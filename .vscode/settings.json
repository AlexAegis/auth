{
	"tslint.alwaysShowRuleFailuresAsWarnings": true,
	"editor.formatOnSave": true,
	"editor.autoIndent": "full",
	"editor.tabCompletion": "off",
	"editor.rulers": [
		{
			"color": "#bdbdbd11",
			"column": 80
		},
		{
			"color": "#6d6d6d75",
			"column": 100
		}
	],
	"editor.quickSuggestionsDelay": 0,
	"editor.quickSuggestions": {
		"other": true,
		"comments": false,
		"strings": false
	},
	"editor.wordBasedSuggestions": true,
	"editor.suggest.localityBonus": true,
	"editor.snippetSuggestions": "bottom",
	"editor.tabSize": 4,
	"editor.codeActionsOnSave": {
		"source.fixAll": true,
		"source.organizeImports": true,
		// For ESLint
		"source.fixAll.eslint": true,
		// For TSLint
		"source.fixAll.tslint": true,
		// For Stylelint
		"source.fixAll.stylelint": true
	},
	"editor.fontLigatures": true,
	"editor.mouseWheelZoom": true,
	"material-icon-theme.folders.associations": {
		// This option doesn't work here, copy it and the next entry into your user settings if you wish to have folder icon associations
		"module": "font",
		"modules": "font",
		"component": "components",
		"doc": "markdown",
		"animation": "delta",
		"guard": "ngrx-effects",
		"directive": "ngrx-actions",
		"directives": "ngrx-actions",
		"interceptor": "middleware",
		"validator": "coverage",
		"e2e": "test",
		"store": "Redux-store",
		"actions": "ngrx-actions",
		"action": "ngrx-actions",
		"effects": "Ngrx-effects",
		"effect": "Ngrx-effects",
		"reducers": "ngrx-reducer",
		"reducer": "ngrx-reducer"
	},
	"material-icon-theme.files.associations": {
		"*.animation.ts": "purescript"
	},
	"files.exclude": {
		"**/.git": true,
		"**/.DS_Store": true
	},
	"files.associations": {
		"*.json": "jsonc"
	},
	"terminal.integrated.windowsEnableConpty": true,
	"liveServer.settings.multiRootWorkspaceName": "starter-stack",
	"json.schemas": [
		{
			"fileMatch": ["typedoc.json"],
			"url": "https://json.schemastore.org/typedoc"
		}
	]
}
